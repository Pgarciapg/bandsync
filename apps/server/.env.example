# BandSync Server Configuration
PORT=3001
CORS_ORIGIN=*

# Redis Configuration (for session persistence)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Performance Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_INTERVAL=30000

# Security
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Socket.IO Configuration
SOCKET_PING_INTERVAL=10000
SOCKET_PING_TIMEOUT=5000
SOCKET_MAX_BUFFER_SIZE=1000000